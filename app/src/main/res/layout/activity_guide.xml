<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_vp_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <Button
        android:visibility="gone"
        android:id="@+id/guide_btu_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:background="@drawable/select_guide_start_btu_text_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="开始体验"
        android:textColor="@color/select_guide_start_btu_text_color" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        >
        <LinearLayout
            android:id="@+id/guide_ll_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <!-- <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="#000000"
                android:layout_marginRight="10dp"
                /> -->
        </LinearLayout>
        <!-- 红色的点 -->
        <ImageView
            android:id="@+id/guide_iv_reddot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_dot_red_bg"
            />
    </RelativeLayout>

</RelativeLayout>